<!-- initiallizes the chart element in the page with the id pollChart -->

<script type='text/javascript' src='/public/libs/chart.min.js'></script>

<script type='text/javascript'>
   var ctx = document.getElementById('pollChart').getContext('2d');
   var chart = new Chart(ctx, {
      type: 'pie',
      data: {
         labels: "<%= labels %>".split(','),
         datasets: [{
            label: '# of Votes',
            data: [<%= data %>],
            backgroundColor: "<%= bg %>".split(';')
         }],
      },
      options: {
         scales: {
            xAxes: [{
               gridLines: { display: false },
               ticks: { display: false }
            }],
            yAxes: [{
               gridLines: { display: false },
               ticks: {
                  display: false,
                  beginAtZero: true
               }
            }]
         }
      }
   });
</script>

<!DOCTYPE html>
<html>
   <head>

      <title>Login</title>
      <link rel='stylesheet' href='/public/libs/bootstrap-3.3.7/css/bootstrap.min.css'>

   </head>
   <body class='container'>
      <%- include('./partials/navbar.ejs') %>
      <div>
         <% if (message.length > 0) { %>
            <div class='alert alert-danger'><%= message %></div>
         <% } %>
         <div class='row'>
            <div class='col-sm-6 col-sm-offset-3'>
               <h3 class='text-center text-primary'>Sign In</h3>
               <form class='jumbotron' method='post' action='/signin'>
                  <div class='form-group row'>
                     <label class='col-sm-2 col-form-label' for='username'>Username</label>
                     <div class='col-sm-10'>
                        <input id='username' type='username' class='form-control' name='username' placeholder=''>
                     </div>
                  </div>
                  <div class='form-group row'>
                     <label class='col-sm-2 col-form-label' for='password'>Password</label>
                     <div class='col-sm-10'>
                        <input id='password' type='password' class='form-control' name='password'  placeholder=''>
                     </div>
                  </div>
                  <div class='form-group row'>
                     <div class='col-sm-10 col-sm-offset-2'>
                        <button type='submit' class='btn btn-primary'>Login</button>
                        <small>Haven't registered yet? <a href='/signup'>Sign Up!</a></small>
                     </div>
                  </div>
               </form>
            </div>
         </div>
      </div>
</div>
      <hr>
      <script type='text/javascript' src='/public/libs/jquery-2.2.4.min.js'></script>
      <script type='text/javascript' src='/public/libs/bootstrap-3.3.7/js/bootstrap.min.js'></script>
      <script type='text/javascript'>
         $('#username').focus();
      </script>
   </body>
</html>
